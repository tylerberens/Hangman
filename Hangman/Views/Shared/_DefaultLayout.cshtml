<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
            crossorigin="anonymous"></script>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fredericka+the+Great&family=Nosifer&display=swap" rel="stylesheet">
    <style>
        .center {
            position: absolute;
            width: 100%;
            max-width: 600px;
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%);
        }

        body {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            color: #fff;
            background: url(https://raw.github.com/mmoustafa/Chalkboard/master/img/bg.png);
            font-family: 'Fredericka the Great', cursive;
            font-size: 22px;
        }

        input {
            border: none;
            background: #000;
            color: orange;
            width: 100px;
            font-size: 45px;
            text-align: center;
            text-transform: uppercase;
        }
        .hide{
            display:none !important;
        }
        .incorrectLetters {
            height: 250px;
            background: #0000002e;
            padding: 15px;
            border-radius: 5px;
            box-shadow: #00000014 0px 6px 15px;
        }
        .incorrectLetters label{
            display:block;

        }
        .alert {
            color: #fbb900;
        }
        /* Hangman CSS : */
        .noose_parent__3UpaV {
            vertical-align: middle;
            max-height: 250px;
        }

        .noose_parent__3UpaV * {
            fill: none;
            stroke-width: 10px;
            opacity: 0
        }

        .noose_islogo__GMdIX {
            width: 1.1em;
            height: 1.5521186441em
        }

        .noose_face__340qe {
            stroke-width: 4px
        }

        .noose_dim__2tELn {
            opacity: 1;
            stroke: #383838
        }

        .noose_on__3Tbdc {
            opacity: 1;
            stroke: currentColor
        }
    </style>
</head>
<body>
    <div>
        @RenderBody()
    </div>
</body>
</html>
